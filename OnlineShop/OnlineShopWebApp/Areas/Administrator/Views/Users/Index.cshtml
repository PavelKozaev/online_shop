@model IEnumerable<UserViewModel>
@{
    int i = 1;
}

<div class="row">
    @await Html.PartialAsync("MenuAdministrator")

    <div class="col-9">
        <h3 class="text-center">Список пользователей</h3>
        <br />
        <a class="btn btn-outline-success" asp-controller="Users" asp-action="Create">Добавить нового пользователя</a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Email</th>
                            <th>Имя</th>
                            <th>Фамилия</th>
                            <th>Телефон</th>
                            <th>Роль</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td class="col-3"><a asp-area="Administrator" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"><p>@user.Email</p></a></td>
                                <td class="col-3"><p>@user.FirstName</p></td>
                                <td class="col-3"><p>@user.LastName</p></td>
                                <td class="col-3"><p>@user.Phone</p></td>
                                <td class="col-3"><p>@user.Role.Name</p></td>
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>