@model User
<form method="post">
	<h4>Смена пароля для пользователя @ViewData["email"]</h4>
	<br />
	<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Password">Новый пароль</label>
		<input asp-for="Password" class="form-control"  placeholder="Пароль">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

	<!-- Дополнительное поле для подтверждения пароля (не связано с моделью User) -->
	<div class="form-group">
		<label for="confirmPassword">Подтвердите новый пароль</label>
		<input id="confirmPassword" name="confirmPassword" class="form-control" placeholder="Пароль">
	</div>

	<br />
	<br />
	<br />

	<button type="submit" class="btn btn-primary" asp-area="Administrator" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@ViewData["id"]">Сохранить</button>
	<a class="btn btn-outline-primary" asp-area="Administrator" asp-controller="Users" asp-action="Index">Отмена</a>
</form>