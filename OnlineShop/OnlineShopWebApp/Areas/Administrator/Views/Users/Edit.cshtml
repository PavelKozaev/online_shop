@model User

@{
    ViewData["Title"] = "Редактирование данных";
}

<h1>@ViewData["Title"]</h1>

<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />   
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input asp-for="Password" class="form-control" disabled />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" disabled />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Имя</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Фамилия</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>    
    <div class="form-group">
        <label asp-for="Phone" class="control-label">Телефон</label>
        <input asp-for="Phone" class="form-control" disabled />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role.Name" class="control-label" disabled >Роль</label>
        <input asp-for="Role.Name" class="form-control" disabled />
        <span asp-validation-for="Role.Name" class="text-danger"></span>
    </div>    
    <div class="form-group">
        <button class="btn btn-success btn-group" type="submit" asp-area="Administrator" asp-controller="Users" asp-action="Edit">Сохранить изменения</button>
    </div>
</form>