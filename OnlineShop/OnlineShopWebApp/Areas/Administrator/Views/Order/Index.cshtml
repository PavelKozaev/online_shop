@model IEnumerable<Order>
@{
    int i = 1;
}

<div class="row">
    @await Html.PartialAsync("MenuAdministrator")

    <div class="col-9">
        <h3 class="text-center">Список заказов</h3>
        <br />
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Сумма</th>
                            <th>Статус</th>
                            <th>Дата</th>
                            <th>Время</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td class="col-2"><p>@order.Cost</p></td>
                                <td class="col-2"><p>@EnumHelper.GetDisplayName(order.Status)</p></td>
                                <td class="col-2"><p>@order.CreateDateTime.ToString("d")</p></td>
                                <td class="col-2"><p>@order.CreateDateTime.ToString("t")</p></td>
                                <td>
                                    <a href="/Administrator/Order/Details?orderId=@order.Id">Подробнее</a>
                                <td />                                
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>