@model IEnumerable<Product>
@{
    int i = 1;
}

<div class="row">
    @await Html.PartialAsync("MenuAdministrator")

    <div class="col-9">
        <h3 class="text-center">Список продуктов</h3>
        <br />
        <a class="btn btn-outline-success" asp-area="Administrator" asp-controller="Product" asp-action="Add">Добавить новый продукт</a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>                            
                            <th>Название</th>
                            <th>Изображение</th>
                            <th>Автор</th>
                            <th>Цена, руб.</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td class="col-3"><a asp-area="Administrator" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><p>@product.Name</p></a></td>
                                <td class="col-2"><a asp-area="Administrator" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"><img class="card-img-top" src="@product.ImagePath" alt="@product.Name" /></a></td>
                                <td class="col-2"><p>@product.Author</p></td>
                                <td class="col-2"><p class="cost">@product.Cost руб</p></td>
                                <td class="col-3 text-end">
                                    <a class="btn btn-outline-primary" asp-area="Administrator" asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id">Редактировать</a>
                                    <a class="btn btn-outline-danger" asp-area="Administrator" asp-controller="Product" asp-action="Remove" asp-route-id="@product.Id">Удалить</a>
                                </td>
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>