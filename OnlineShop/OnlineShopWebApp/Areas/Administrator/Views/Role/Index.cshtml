@model IEnumerable<OnlineShopWebApp.Areas.Administrator.Models.Role>
@{
    int i = 1;
}

<div class="row">
    @await Html.PartialAsync("MenuAdministrator")

    <div class="col-9">
        <h3 class="text-center">Список ролей</h3>
        <br />
        <a class="btn btn-outline-success" asp-area="Administrator" asp-controller="Role" asp-action="Add">Добавить новую роль</a>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Название</th> 
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td> @i </td>
                                <td class="col-2"><p>@role.Name</p></td>                                
                                <td>
                                    <!-- Кнопка-триггер модального окна -->
                                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#@role.Name">Удалить</button>                                    
                                <td />
                            </tr>
                            i += 1;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@foreach (var role in Model)
{
    <!-- Модальное окно -->
    <div class="modal fade" id="@role.Name" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="@role.Name">Удаление роли: @role.Name</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    Вы уверены, что хотите удалить эту роль?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <a class="btn btn-primary" type="button" asp-area="Administrator" asp-controller="Role" asp-action="Remove" asp-route-roleName="@role.Name">Удалить</a>
                </div>
            </div>
        </div>
    </div>
}