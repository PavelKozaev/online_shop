<form method="post"> 
    <div class="col-6 card shadow-lg">

        <div class="form-group" style="margin:10px">
            <label for="exampleFormControlInput1">ФИО</label>
            <input type="text" class="form-control" name="name" placeholder="Иванов Иван Иванович">
        </div>
        <div class="form-group" style="margin:10px">
            <label for="exampleFormControlInput2">Email</label>
            <input type="text" class="form-control" name="mail" placeholder="name@example.com">
        </div>
        <div class="form-group" style="margin:10px">
            <label for="exampleFormControlInput3">Телефон</label>
            <input type="text" class="form-control" name="phone" placeholder="+7 (999) 999 99 99">
        </div>
        <div class="form-group" style="margin:10px">
            <label for="exampleFormControlInput4">Адрес</label>
            <input type="text" class="form-control" name="address" placeholder="г. Москва, ул. Малая Бронная, д. 1">
        </div>

    </div>

    <div class="action">
        <a href="/Home/Index" class="btn btn-primary" role="button">Вернуться к покупкам</a>
        <button class="btn btn-success" type="submit" asp-controller="Order" asp-action="Buy">Оформить заказ</button>        
    </div>
</form>
