@model Order;

<div class="text-center">
    <h4>Заказ № @Model.Id успешно создан!</h4>
</div>
<br />
<div class="row">
    <div class="col">
        <h4>Заказ пользователя</h4>
        <table class="table">
            <thead>
                <tr>
                    <th class="col-5">Название</th>
                    <th class="col-2">Цена</th>
                    <th class="col-2">Количество</th>
                    <th class="col-3">Сумма</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Cart.Items)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@string.Format("{0:### ###}", item.Product.Cost) р</td>
                        <td>@item.Amount</td>
                        <td>@string.Format("{0:### ###}", item.Cost) р</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end">
            <h6>Итого: @string.Format("{0:### ###}", Model.Cart.Cost) р</h6>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col">
        <h4>Данные по заказу</h4>
        <table class="table">
            <thead>
                <tr>
                    <th class="col-5">ФИО</th>
                    <th class="col-2">Телефон</th>
                    <th class="col-2">E-mail</th>
                    <th class="col-3">Адрес</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Name</td>
                    <td>@Model.Phone</td>
                    <td>@Model.Mail</td>
                    <td>@Model.Address</td>
                </tr>
            </tbody>
        </table>    
    </div>
</div>


<br />
<div class="alert alert-info" role="alert">
    <h4 class="alert-heading">Спасибо за покупку!</h4>    
    <hr>
    <a class="btn btn-primary" href="/Home/Index">Вернуться в магазин</a>
</div>