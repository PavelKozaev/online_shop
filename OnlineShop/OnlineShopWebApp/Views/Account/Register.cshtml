@model Register

<form method="post">

    <h5>Регистрация</h5>

    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label asp-for="Email">Логин</label>
        <input asp-for="Email" class="form-control" placeholder="Логин">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" placeholder="Пароль">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Повторите пароль</label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Повторите пароль">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <br />

    <button class="btn btn-primary" type="submit" asp-controller="Account" asp-action="Register">Зарегистрироваться</button>
</form>