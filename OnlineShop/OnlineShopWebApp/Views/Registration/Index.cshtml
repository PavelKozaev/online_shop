@model Registration

<form method="post">

    <h5>Регистрация</h5>

    <div class="form-group">
        <label>Логин</label>
        <input type="text" name="Login" class="form-control" placeholder="Логин">
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input type="password" name="Password" class="form-control" placeholder="Пароль">
    </div>
    <div class="form-group">
        <label>Повторите пароль</label>
        <input type="password" name="ConfirmPassword" class="form-control" placeholder="Повторите пароль">
    </div>

    <br />

    <button class="btn btn-primary" type="submit" asp-controller="Registration" asp-action="AddNewUser">Зарегистрироваться</button>
</form>