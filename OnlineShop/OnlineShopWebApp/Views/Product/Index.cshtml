@model Product

<div class="product-details">
    <h2>@Model.Name</h2>
    <img src="@Model.ImageUrl" alt="Изображение @Model.Name">
    <p class="cost">Цена: @Model.Cost руб.</p>
    <p>Описание: @Model.Description</p>
    <!-- Дополнительная информация о продукте -->
    <!-- Кнопка для возврата на главную страницу -->
    <a href="/Home/Index" class="btn btn-outline-primary">Продолжить покупки</a>

    <!-- Кнопка для добавления в корзину (пока без функционала) -->
    <a href="/Cart/Add?productId=@Model.Id" class="btn btn-outline-success">Добавить в корзину</a>
</div>