@model FavoritesViewModel

@if (Model != null && Model.Products.Any())
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Автор</th>
                        <th>Цена, руб.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Author</td>
                            <td>@item.Cost</td>
                            <td>
                                <a asp-controller="Favorites" asp-action="RemoveFromFavorites" asp-route-productId="@item.Id" class="btn btn-danger">Убрать из избранного</a>
                                <a asp-controller="Carts" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Добавить в корзину</a>
                            </td>
                        </tr>
                    }
                   <div class="action">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-success">Продолжить покупки</a>
                        <a asp-controller="Favorites" asp-action="Clear" class="btn btn-secondary">Очистить избранное</a>
                   </div>                        
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        <h4 class="alert-heading">Ваш список избранных пуст.</h4>
        <p>Вы еще не добавили продукты в список избранных. Пройдите в каталогу и выберите что-нибудь по своему вкусу!</p>
        <hr>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Перейти в каталог</a>
    </div>    
}