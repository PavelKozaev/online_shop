@model FavoritesViewModel

@if (Model == null || !Model.Products.Any())
{
    <h3>Список избранного пуст</h3>
}
else
{
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Автор</th>
                        <th>Цена, руб.</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Author</td>
                            <td>@item.Cost</td>
                            <td>
                                <a asp-controller="Favorites" asp-action="RemoveFromFavorites" asp-route-productId="@item.Id" class="btn btn-danger">Убрать из избранного</a>
                                <a asp-controller="Carts" asp-action="Create" asp-route-id="@item.Id" class="btn btn-primary">Добавить в корзину</a>
                            </td>
                        </tr>                        
                    }
                    <a href="/Home/Index" class="btn btn-secondary" role="button">Продолжить покупки</a>
                </tbody>
            </table>
        </div>
    </div>
}