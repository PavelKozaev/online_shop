@model Cart

@if (Model != null && Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Изображение</th>
                <th>Название</th>
                <th>Автор</th>
                <th>Цена, руб.</th>
                <th>Количество</th>
                <th>Стоимость, руб.</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td><img src="@item.Product.ImagePath" alt="@item.Product.Name" /></td>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Author</td>
                    <td>@item.Product.Cost</td>
                    <td>@item.Amount</td>
                    <td>@item.Cost</td>
                    <td>
                        <a href="/Carts/DecreaseAmount?productId=@item.Product.Id" class="btn btn-success" role="button">-</a>
                        <a href="/Carts/Create?productId=@item.Product.Id" class="btn btn-success" role="button">+</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="total-amount">
        <h3>Общая сумма: <span class="total-sum">@Model.Cost</span> руб.</h3>
    </div>
    <div class="action">
        <a href="/Home/Index" class="btn btn-primary role=" button"">Продолжить покупки</a>
        <a href="/Orders/Index" class="btn btn-success" role="button">Оформить заказ</a>
        <a href="/Carts/Clear" class="btn btn-danger" role="button">Очистить корзину</a>
    </div>
}

else
{
<div class="alert alert-info" role="alert">
    <h4 class="alert-heading">Ваша корзина пуста.</h4>
    <p>Вы еще не добавили товары в корзину. Пройдите по каталогу и выберите что-нибудь по своему вкусу!</p>
    <hr>
    <a class="btn btn-primary" href="/Home/Index">Перейти в каталог</a>
</div>
}