@model List<ProductViewModel>

@if (Model.Count == 0)
{
    <div class="text-center">
        <h3 class="bg-warning-subtle text-emphasis-warning">Ничего не найдено</h3>
        <br />
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Перейти к покупкам</a>
    </div>
}


<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <!-- Колонка для карточки книги -->
            <div class="col-md-3">
                <div class="card h-100">
                    <a asp-controller="Products" asp-action="Index" asp-route-id="@product.Id"><img class="card-img-top" src="@product.ImagePath" alt="@product.Name" /></a>
                    <div class="card-body d-flex flex-column">
                        <div class="card-header">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-author">@product.Author</p>
                            <p class="cost">@product.Cost руб.</p>
                        </div>
                        <!-- Элемент с описанием -->
                        <div class="card-text description">
                            @product.Description
                        </div>
                        <!-- Кнопка для показа полного описания -->
                        <button onclick="toggleDescription(this)" class="btn btn-link">Читать дальше</button>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Products" asp-action="Index" asp-route-id="@product.Id" class="btn btn-secondary">Подробнее</a>
                                    <a asp-controller="Carts" asp-action="Create" asp-route-id="@product.Id" class="btn btn-danger">В корзину</a>
                                </div>
                            </div>
                            <div class="d-flex justify-content-lg-around align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Favorites" asp-action="AddToFavorites" asp-route-productId="@product.Id" class="btn btn-success">В избранное</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="?page=3">3</a></li>
        </ul>
    </nav>


    <!-- Карточка с отзывами пользователей -->
    <div class="card reviews">
        <div class="card-body">
            <h3 class="card-title">Отзывы читателей</h3>
            <!-- Здесь будут отзывы -->
        </div>
        <div class="card-footer">
            <!-- Форма добавления отзыва -->
        </div>
    </div>

</div>