@model ProductViewModel

<div class="product-details">
    <h2>@Model.Name</h2>
    <img src="@Model.ImagePath" alt="Изображение @Model.Name">
    <p class="cost">Цена: @Model.Cost руб.</p>
    <p>Описание: @Model.Description</p>
    <!-- Дополнительная информация о продукте -->
    <div class="action">
        <!-- Кнопка для возврата на главную страницу -->
        <a href="/Home/Index" class="btn btn-secondary" role="button">Продолжить покупки</a>

        <!-- Кнопка для добавления в корзину (пока без функционала) -->
        <a href="/Carts/Create?id=@Model.Id" class="btn btn-success" role="button">Добавить в корзину</a>
        <a href="/Favorites/AddToFavorites?productId=@Model.Id" class="btn btn-primary" role="button">Добавить в избранное</a>
    </div>
</div>