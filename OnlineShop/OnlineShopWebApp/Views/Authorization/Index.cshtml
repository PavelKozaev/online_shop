@model Authorization

<form method="post">

    <h5>Вход</h5>

    <div class="form-group">
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" class="form-control" placeholder="Логин">
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" placeholder="Пароль">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsRememberMe" class="form-check-input" />
        <label asp-for="IsRememberMe" class="form-check-label">Запомнить меня?</label>
    </div>

    <br />

    <button class="btn btn-success" type="submit" asp-controller="Authorization" asp-action="Enter">
        Войти
    </button>    
    <a class="btn btn-primary" role="button" asp-controller="Registration" asp-action="Index">Регистрация нового пользователя</a>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}