@model ChangeUserPasswordViewModel
<form method="post">
    <div>
        <h3>Смена пароля для пользователя @Model.UserName</h3>
    </div>

    <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>

    <input type="hidden" name="UserName" value="@Model.UserName" />

    <div class="row">
        <div class="col-6">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <label asp-for="ConfirmPassword"></label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-primary btn-group" type="submit" asp-controller="Accounts" asp-action="ChangeUserPassword">Сменить</button>
        <a class="btn btn-danger btn-group" asp-controller="Accounts" asp-action="Profile">Отменить</a>
    </div>
</form>