@model Login

<form method="post">

    <h5>Вход</h5>

    <div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
    <div class="form-group">
        <label asp-for="Email">Логин</label>
        <input asp-for="Email" class="form-control" placeholder="Логин">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" class="form-control" placeholder="Пароль">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsRememberMe" class="form-check-input" name="IsRememberMe" value="true"/>
        <label asp-for="IsRememberMe" class="form-check-label">Запомнить меня?</label>
    </div>

    <br />

    <button class="btn btn-success" type="submit" asp-controller="Accounts" asp-action="Login">Войти</button>    
    <a class="btn btn-primary" role="button" asp-controller="Accounts" asp-action="Register">Регистрация нового пользователя</a>
</form>