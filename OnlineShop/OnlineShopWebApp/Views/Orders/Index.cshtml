@model UserDeliveryInfoViewModel

<div class="text-danger font-weight-bold" asp-validation-summary="ModelOnly"></div>

<form method="post"> 
    <div class="col-6 card shadow-lg">

        <div class="form-group" style="margin:10px">
            <label asp-for="Name">Имя</label>
            <input asp-for="Name" class="form-control" placeholder="Иван">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin:10px">
            <label asp-for="EMail">E-mail</label>
            <input asp-for="EMail" class="form-control" placeholder="name@example.com">
            <span asp-validation-for="EMail" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin:10px">
            <label asp-for="Phone">Телефон</label>
            <input asp-for="Phone" class="form-control" placeholder="+7 (999) 999 99 99">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="form-group" style="margin:10px">
            <label asp-for="Address">Адрес</label>
            <input asp-for="Address" class="form-control" placeholder="г. Москва, ул. Малая Бронная, д. 1">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="action">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Вернуться к покупкам</a>
        <button class="btn btn-success" type="submit" asp-controller="Orders" asp-action="Buy">Оформить заказ</button>        
    </div>
</form>